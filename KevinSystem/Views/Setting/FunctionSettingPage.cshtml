@{
    ViewData["Title"] = "Privacy Policy";
    Layout = "_BaseLayout";
}
<div class="row" ng-app="LineMessage" ng-controller="LineMessageCrt">
    <div class="input-group mb-3">
        <input type="text" class="form-control" placeholder="Search" ng-model="Message">

        <div class="input-group-append">
            <button class="btn btn-success" type="button" ng-click="SendMessage()">Go</button>
        </div>
    </div>
    <font>{{Message}}</font>
</div>
<div ng-app="">

    <p>Input something in the input box:</p>
    <p>Name : <input type="text" ng-model="name" placeholder="Enter name here"></p>
    <h1>Hello {{name}}</h1>

</div>

<script>
    var app = angular.module('LineMessage', []);
    app.controller('LineMessageCrt', function ($scope, $http) {

        $scope.Message = '';
        $scope.SendMessage = function () {

            var url = 'http://kevinlinenotify.ddns.net:9025//api/LineNotify/LineNotifySend'
            var req = {
                method: 'POST',//请求的方式
                url: url,//请求的地址
                data: {
                    Message: $scope.Message
                }
            }
            $http(req).then(function success(data) {
                

            }).catch(function error(data) {
            })
        }
    });

    </script>